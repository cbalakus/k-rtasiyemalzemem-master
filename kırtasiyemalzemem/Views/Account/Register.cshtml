
@model  kırtasiyemalzemem.Models.RegisterModel

@{ Layout = null; }
<head>
    <link rel="stylesheet" href="~/css/Login.css" />

</head>
<body>

    <div class="container mt-5">
        @if (TempData["message"] != null)
        {

            <span>@TempData["OperationStatus"]</span>
        }
        <div class="row">
            <div class="col-md-6 ">

                <div class="login-box">
                    <div class="login-snip">
                        <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Kayıt Ol</label> <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab">Sign Up</label>
                        <div class="login-space">

                            <div class="sign-up-form">
                                <form asp-controller="Account" asp-action="Register" method="post">

                                    <div class="group "> <label asp-for="Name" for="Name" class="label">İsim</label> <input asp-for="Name" id="user" type="text" class="input" placeholder="İsim"> <span asp-validation-for="Name"></span> </div>
                                    <div class="group "> <label asp-for="Surname" for="username" class="label">Soyisim</label> <input asp-for="Surname" id="user" type="text" class="input" placeholder="Soyisim"> <span asp-validation-for="Surname"></span> </div>
                                    <div class="group "> <label asp-for="username" for="username" class="label">Kullanıcı Adı</label> <input asp-for="username" id="user" type="text" class="input" placeholder="Kullanıcı Adı"> <span asp-validation-for="username"></span> </div>
                                    <div class="group "> <label asp-for="Password" for="username" class="label">Şifre</label> <input asp-for="Password" id="pass" type="password" class="input" placeholder="Şifre"> <span asp-validation-for="Password"></span> </div>
                                    <div class="group "> <label asp-for="RePassword" for="username" class="label">Tekrar Şifre</label> <input asp-for="RePassword" id="pass" type="password" class="input" placeholder="Tekrar Şifre"> <span asp-validation-for="RePassword"></span> </div>
                                    <div class="group "> <label asp-for="email" for="username" class="label">E-mail</label> <input asp-for="email" id="user" type="text" class="input" placeholder="E-mail"> <span asp-validation-for="email"></span> </div>



                                    <div class="group"> <input type="submit" class="button" value="Sign Up"> </div>
                                    <div class="hr"></div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</body>



<footer>
</footer>